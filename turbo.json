{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
      "dev": {
        "dependsOn": ["^dev"],
        "cache": false,
        "persistent": true
      },
      "build": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**"]
      },
      "start": {
        "cache": false
      },
      "clean": {
        "cache": false
      }
    }
  }
  